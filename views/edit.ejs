<%- include  partials/header.ejs %>


<h1>Edit <%=foundgirl.name%> </h1>




<div style="width: 30% ; margin:0 auto;">
	<form action="/girls/<%=foundgirl._id%>?_method=PUT" method ="POST">
		<div class="form-group">
			<input type="text"  class= "form-control" placeholder="Name" value="<%= foundgirl.name%>" name="updategirl[name]" >
		</div>
		<div class="form-group">
			<input type="text" placeholder="img url" class="form-control" value="<%= foundgirl.img%>" name="updategirl[img]" >
		</div>
		<div class="form-group">
			<textarea rows="5" cols="33" class= "form-control" placeholder="about" name="updategirl[description]" ><%= foundgirl.description%></textarea>
		</div>	
		<div>
			<button  class=" btn btn-lg btn-success btn-block" type="submit">ADD</button>
		</div>
	</form>
</div>

